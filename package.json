{
  "name": "stream2md",
  "version": "0.0.1",
  "type": "module",
  "description": "Vue3 插件 - stream2md",
  "main": "./dist/stream2md.umd.js",
  "module": "./dist/stream2md.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/stream2md.es.js",
      "require": "./dist/stream2md.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc -b && vite build",
    "build:lib": "vite build && vue-tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit"
  },
  "keywords": [
    "vue3",
    "plugin",
    "stream2md",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "sass": "^1.94.2",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vue": "^3.5.24",
    "vue-tsc": "^3.1.4"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "mermaid": "^11.12.2",
    "vue-router": "^4.6.3"
  }
}
